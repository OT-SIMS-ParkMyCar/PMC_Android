<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff041126"
    tools:context="com.otsims5if.pmc.pmc_android.CreateNewUser">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/username"
            android:textColor="#ffffffff"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:text="aaaaaa"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/niveau"
            android:textColor="#ffffffff"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:text="aaaaaa"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:weightSum="1"
        >

        <ProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:progress="90"
            android:max="100"
            android:secondaryProgress="100"
            android:progressDrawable="@layout/progress"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Points: "
                android:textColor="#ffffffff"
                android:layout_alignLeft="@id/circularProgressbar"
                android:layout_alignTop="@id/circularProgressbar"
                android:layout_alignRight="@id/circularProgressbar"
                android:layout_alignBottom="@id/circularProgressbar"
                android:gravity="center"

                android:id="@+id/text_score" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_below="@+id/circularProgressbar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tourist"
           />


    </RelativeLayout >



</RelativeLayout>
